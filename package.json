{
	"name": "r3-boilerplate",
	"version": "1.0.0",
	"description": "react + redux + routing boilerplate with HRM",
	"main": "index.js",
	"author": "FreAK19 (Andrew Kiri4encko)",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/FreAK19/r3-boilerplate.git"
	},
	"keywords": [
		"redux",
		"react",
		"react-router-dom",
		"react-boilerplate"
	],
	"scripts": {
		"build": "webpack --env production",
		"start": "webpack-dev-server --env development",
		"format": "prettier --single-quote --write --print-width=120 --tab-width=2 \"src/**/*.{js,jsx}\"",
		"lint": "eslint src/**/*.{js,jsx} --quiet",
		"flow": "flow check",
		"flow-typed": "flow-typed install",
		"test": "jest",
		"test:coverage": "jest --coverage",
		"test:update": "jest -u"
	},
	"dependencies": {
		"material-ui": "^0.20.0",
		"normalize.css": "^8.0.0",
		"react": "^16.2.0",
		"react-dom": "^16.2.0",
		"react-hot-loader": "^3.1.3",
		"react-redux": "^5.0.6",
		"react-router-dom": "^4.2.2",
		"redux": "^3.7.2",
		"redux-logger": "^3.0.6",
		"redux-thunk": "^2.2.0",
		"uuid": "^3.2.1",
		"whatwg-fetch": "^2.0.3"
	},
	"devDependencies": {
		"@babel/core": "^7.0.0-beta.40",
		"@babel/plugin-proposal-object-rest-spread": "^7.0.0-beta.40",
		"@babel/preset-env": "^7.0.0-beta.40",
		"@babel/preset-es2015": "^7.0.0-beta.40",
		"@babel/preset-flow": "^7.0.0-beta.40",
		"@babel/preset-react": "^7.0.0-beta.40",
		"assets-webpack-plugin": "^3.5.1",
		"autoprefixer": "^7.2.5",
		"babel-eslint": "^8.2.1",
		"babel-jest": "^22.1.0",
		"babel-loader": "8.0.0-beta.0",
		"babel-plugin-syntax-dynamic-import": "^6.18.0",
		"babel-plugin-transform-class-properties": "^6.24.1",
		"babel-plugin-transform-es2015-modules-commonjs": "^6.26.0",
		"babel-polyfill": "^6.26.0",
		"babel-preset-stage-3": "^6.24.1",
		"clean-webpack-plugin": "^0.1.18",
		"css-loader": "^0.28.9",
		"enzyme": "^3.3.0",
		"enzyme-adapter-react-16": "^1.1.1",
		"enzyme-to-json": "^3.3.1",
		"eslint": "^4.14.0",
		"eslint-config-airbnb": "^16.1.0",
		"eslint-config-prettier": "^2.9.0",
		"eslint-config-react": "^1.1.7",
		"eslint-loader": "^1.9.0",
		"eslint-plugin-import": "^2.8.0",
		"eslint-plugin-jsx-a11y": "^6.0.3",
		"eslint-plugin-prettier": "^2.4.0",
		"eslint-plugin-react": "^7.5.1",
		"extract-text-webpack-plugin": "^3.0.2",
		"fetch-mock": "^6.0.0",
		"file-loader": "^1.1.6",
		"flow-bin": "^0.65.0",
		"flow-typed": "^2.3.0",
		"html-webpack-plugin": "^2.30.1",
		"jest": "^22.1.4",
		"jest-cli": "^22.1.4",
		"less": "^2.7.3",
		"less-loader": "^4.0.5",
		"postcss-flexbugs-fixes": "^3.3.0",
		"postcss-import": "^11.0.0",
		"postcss-loader": "^2.1.0",
		"prettier": "^1.10.2",
		"prop-types": "^15.6.0",
		"style-loader": "^0.20.1",
		"url-loader": "^0.6.2",
		"webpack": "^3.10.0",
		"webpack-bundle-analyzer": "^2.10.0",
		"webpack-dev-server": "^2.11.1",
		"webpack-merge": "^4.1.1"
	},
	"jest": {
		"setupFiles": [
			"./src/__tests__/setup/jestSetup.js"
		],
		"snapshotSerializers": [
			"enzyme-to-json/serializer"
		],
		"moduleNameMapper": {
			".*\\.less$|\\.css$": "<rootDir>/src/__tests__/setup/dummy.js"
		},
		"verbose": true,
		"moduleDirectories": [
			"node_modules",
			"src"
		],
		"moduleFileExtensions": [
			"js",
			"jsx"
		],
		"testPathIgnorePatterns": [
			"<rootDir>/node_modules/",
			"<rootDir>/build/",
			"/src/__tests__/setup/"
		]
	}
}
